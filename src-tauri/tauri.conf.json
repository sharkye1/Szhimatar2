{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Szhimatar",
        "version": "1.0.2"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "process": {
                "relaunch": true
            },
            "http": {
                "all": true,
                "scope": [
                    "https://github.com/sharkye1/Szhimatar2/releases/latest/download/*",
                    "https://objects.githubusercontent.com/**"
                ]
            },
            "shell": {
                "all": false,
                "open": false,
                "execute": true,
                "sidecar": false,
                "scope": [
                    {
                        "name": "ffprobe",
                        "cmd": "",
                        "args": [
                            "-v",
                            "quiet",
                            "-print_format",
                            "json",
                            "-show_format",
                            "-show_streams",
                            {
                                "validator": "\\S+"
                            }
                        ]
                    }
                ]
            },
            "dialog": {
                "all": true,
                "open": true,
                "save": true
            },
            "fs": {
                "all": true,
                "readFile": true,
                "writeFile": true,
                "readDir": true,
                "copyFile": true,
                "createDir": true,
                "removeDir": true,
                "removeFile": true,
                "renameFile": true,
                "exists": true,
                "scope": [
                    "$APPDATA/*",
                    "$APPDATA/**",
                    "$RESOURCE/*",
                    "$RESOURCE/**"
                ]
            },
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true,
                "setTitle": true,
                "setFocus": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.szhimatar.app",
            "icon": [],
            "resources": [
                "assets/Szhimatar.VisualElementsManifest.xml",
                "assets/Szhimatar_windows-x86_64.VisualElementsManifest.xml",
                "assets/icon_150.png",
                "assets/icon_70.png"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Szhimatar",
                "width": 800,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "center": true,
                "decorations": true
            }
        ]
    }
}